@model Models.EF.Page

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm("Edit", "Page", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
